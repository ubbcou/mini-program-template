/* 搜索框 ...start */
.sch-wrap {
  overflow: hidden;
  display: flex;
  flex-direction: 'row';
  width: 100%;
  box-sizing: border-box;
  padding: 16rpx 24rpx;
  background-color: #e02e24;
}

.sch-input-wrap {
  flex: 1;
  width: 100%;
  position: relative;
}

.sch-input {
  display: block;
  width: 100%;
  height: 63rpx;
  min-height: 63rpx;
  padding-left: 12rpx;
  padding-right: 70rpx;
  box-sizing: border-box;
  border-radius: 6rpx;
  background-color: #fff;
  font-size: 12px;
}

.sch-clear-wrap {
  position: absolute;
  right: 0;
  top: 0;
  width: 70rpx;
  height: 63rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sch-clear {
  display: flex;
}

.sch-btn {
  padding-left: 24rpx;
  color: #fff;
  line-height: 63rpx;
  font-size: 12px;
  margin-right: -24rpx;
  padding-right: 24rpx;
}
/* 搜索框 ...end */

/* 历史搜索 ...start */
.hst-wrap {
  padding: 0 24rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.hst-title {
  display: flex;
  padding: 12rpx 24rpx;
  margin: 0 -24rpx;
  border-bottom: 1rpx solid #ddd;
  line-height: 48rpx;
}

.hst-title-item {
  display: block;
  width: 100%;
}

.hst-title-text {
  color: #666;
}

.hst-clear {
  text-align: right;
  font-size: 10px;
}

.hst-list {
  padding-top: 24rpx;
}

.hst-item {
  max-width: 100%;
  display: inline-block;
  box-sizing: border-box;
  line-height: 48rpx;
  border: 1rpx solid #ddd;
  padding: 0 12rpx;
  margin: 0 12rpx 12rpx;
  border-radius: 6rpx;
  color: #666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
/* 历史搜索 ...end */

/* 商品列表 ...tart */
.tile-wrap {
  position: relative;
  padding-bottom: 134rpx;
}

.tile-sort {
  display: flex;
  background-color: #fff;
  border-top: 8rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
  margin-bottom: 16rpx;
}

.tile-sort-item {
  flex: 1;
  padding: 24rpx 0;
  text-align: center;
  color: #666;
}

.tile-sort-item.active {
  color: #e02e24
}

.tile-sort-itext {
  display: inline-block;
  margin-bottom: -24rpx;
  padding-bottom: 24rpx;
  border-bottom: 3rpx solid #e02e24
}
/* 商品列表 ...end */

