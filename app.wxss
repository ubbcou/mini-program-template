/*
基础色值      #e02e24
基础字体大小  12px
页面边距      24rpx || 12rpx
 */

.page {
  overflow: hidden;
  font-size: 12px;
  color: #000;
}

button {
  border-radius: 0;
  font-size: inherit;
  padding-top: 0;
  padding-right: 0;
  padding-bottom: 0;
  padding-left: 0;
  background-color: transparent;
  line-height: normal;
}

button:active {
  opacity: 1;
}

button::after {
  border: 0;
}

/* 
  加载 ...start 
  高度约 134rpx
  */
.load-wrap {
  overflow: hidden;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  font-size: 12px;
}

.loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 12px;
  text-align: center;
  color: #777
}

.loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}

.loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

@keyframes weuiLoading {
  0% {
    transform: rotate3d(0, 0, 1, 0deg);
  }

  100% {
    transform: rotate3d(0, 0, 1, 360deg);
  }
}
/* 加载 ...end */
